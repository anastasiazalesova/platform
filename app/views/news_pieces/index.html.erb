<div class="page-header">
  <%= link_to new_news_piece_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New News piece
  <% end %>
  <h1>Listing news_pieces</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Time</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @news_pieces) do |news_piece| %>
            <td><%= news_piece.title %></td>
            <td><%= news_piece.description %></td>
            <td><%= news_piece.time %></td>
            <td><%= link_to 'Show', news_piece %></td>
        <td><%= link_to 'Edit', edit_news_piece_path(news_piece) %></td>
        <td><%= link_to 'Destroy', news_piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
