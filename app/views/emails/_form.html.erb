<%= form_for(@email, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @email.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:</h4>

      <ul>
      <% @email.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :supplier_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :supplier_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :consumer_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :consumer_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :new, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :new, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
